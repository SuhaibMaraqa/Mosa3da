<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/therapist-List.css">
</head>


<body>
    
  <%- include('./includes/navbar.ejs') %>

  <div class="container">


  <main style="margin-top: 100px;">
    <% if (usersAll.length > 0) { %>
        <div style="display: flex; justify-content: center; align-items: stretch; flex-wrap: wrap;">
        <% for (let singleUser of usersAll) { %>
            <% if (singleUser.role ==='therapist') { %>
            <div class="profile-card" style="margin-left: 30px; margin-right: 30px; margin-bottom: 60px;">
                <div class="img-area">
                    <div class="inner-area">
                        <% if(singleUser.image == "https://i.imgur.com/fUWz80K.jpg") { %>
                            <img src="<%= singleUser.image %>" alt="" />
                        <% } else { %>
                            <img src="/<%= singleUser.image %>" alt="" />
                        <% } %>
                        
                    </div>
                </div>

                <div class="name"><%= singleUser.name %></div>            

                <% if(singleUser.specialties) { %>     
                    <div class="about text-center">Specialized in: <%= singleUser.specialties %></div>
                    <% } %> 
                    
                <div class="buttons text-center" style="display: inline-block;">

                    <form action="/therapists/<%=singleUser._id%>">
                        <button type="submit" style="margin-bottom: 10px;">View Profile</button>
                        <input type="hidden" name="therapistId" value="<%= singleUser.id %>">
                    </form>

                    <form action="/book" method="POST">
                        <button type="submit">Book</button>
                        <input type="hidden" name="userEmail" value="<%= singleUser.email %>">
                    </form>

                </div>
                </div>
                <% } %>
            <% } %>
            <% } %>
        </div>
    
    </main>

</div>



</body>
</html>
<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/account.css">
</head>
<body>
    <%- include('./includes/navbar.ejs') %>

    <form action="/edit-account" method="POST" enctype="multipart/form-data">

    <div class="page-content page-container" id="page-content" style="margin-top: 75px">
        <div class="padding">
          <div style="text-align: center;">
            <%- include("./partials/errorMessages.ejs") %>
        </div>
        <h4 class="text-center" style="margin-bottom: 25px;">Editing Profile</h4>
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-12 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 user-profile" style="background-color: #79B4B7;">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25"> <img src="<%= user.image %>" class="img-radius" alt="User-Profile-Image" style="max-width: 50%; max-height: 50%;"> </div>
                                    <div class="form-group" style="margin-top: -15px; margin-bottom: 25px;">
                                      <input style=" border-radius:10px; text-align: center;;"
                                        type="file"
                                        id="image"
                                        name="image"
                                        class="form-control"
                                      />
                                    </div>
                                    <p class="m-b-10 f-w-600">Name</p>
                                    <div class="form-group" style="margin-top: -10px;">
                                        <input style=" border-radius:10px; text-align: center;"
                                          type="name"
                                          id="name"
                                          name="name"
                                          class="form-control"
                                          value="<%= user.name %>"
                                        />
                                      </div>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h4 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h4>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Email</p>
                                            <div class="form-group">
                                                <input style=" border-radius:10px;"
                                                  type="email"
                                                  id="email"
                                                  name="email"
                                                  class="form-control"
                                                  value="<%= user.email %>"
                                                />
                                              </div>
                                        </div>


                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Gender</p>
                                            <div class="text-center" style="margin: 10px;">
                                                <% if(user.gender === 'Male') { %>
                                                <div class="form-check form-check-inline">
                                                  <input class="form-check-input" type="radio" name="gender" id="gender" value="Male" checked>
                                                  <label class="form-check-label" for="inlineRadio1">Male</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                  <input class="form-check-input" type="radio" name="gender" id="gender" value="Female">
                                                  <label class="form-check-label" for="inlineRadio2">Female</label>
                                                </div>
                                              </div>
                                              <% } else { %>
                                                <div class="text-center" style="margin: 10px;">
                                                    <div class="form-check form-check-inline">
                                                      <input class="form-check-input" type="radio" name="gender" id="gender" value="Male">
                                                      <label class="form-check-label" for="inlineRadio1">Male</label>
                                                    </div>
                                                    <div class="form-check form-check-inline">
                                                      <input class="form-check-input" type="radio" name="gender" id="gender" value="Female" checked>
                                                      <label class="form-check-label" for="inlineRadio2">Female</label>
                                                    </div>
                                                  </div>
                                                  <% } %>
                                                  
                                                  <p class="lead mt-4 text-center">
                                                    <a href="/change-password" class="btn btn-outline-info" style="color: black; font-weight: 400; font-size: 15px;">Change Password</a>
                                                  </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="text-center" style="margin-top: -50px;">
        <button type="submit" class="btn btn-primary btn-block" style="background-color: #79B4B7; border-color: #79B4B7; border-radius: 50px; font-size: 1em; padding-right: 1cm; padding-left: 1cm; margin-top: 10px;">Save Changes</button>
    </div>

    </form>



</body>
</html>
<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/footer.css">

</head>

<body>

  <%- include('./includes/navbar.ejs') %>
  <div class="container">
  <main style="margin-top: 50px;">


    <% if (reports.length > 0) { %>
      <div style="display: flex; justify-content: center; align-items: stretch; flex-wrap: wrap;">
      <% for (let report of reports) { %>
        <div class="container">
          <div class="row" >
            <div class="col-lg-12">
              <div class="card border-0 mb-4 mt-4" style="background-color: #F8F0DF; border-radius:10px; box-shadow: 0px 0px 10px 2px rgba(0, 0, 0, 0.26);">
                <div class="d-flex";>
                    <div class="flex-fill">
                      <div class="card-body">

                        <div class="flex-container" style="display: flex;">
                            <div class="mb-3" style="font-weight: 500;">Title:&nbsp;</div>
                            <div class="mb-3" > <%= report.title %> </div>
                          </div>
                          <div class="flex-container" style="display: flex;">
                            <div class="font-weight-bold" style="font-weight: 500;">Email:&nbsp;</div>
                            <div class="font-weight-bold"><%= report.email %> </div>
                          </div>
  
                          <div class="flex-container" style="display: flex;">
                            <div class="font-weight-bold" style="font-weight: 500;">Description:&nbsp;</div>
                            <div class="font-weight-bold"><%= report.description %>:00 PM </div>
                          </div>
                      </div>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">

                          <form action="/reports" method="POST">
                            <button class="btn btn-primary" style="background-color: #FF6961; border-color: #FF6961; border-radius: 50px; font-size: 1em; padding-right: 1cm; padding-left: 1cm; margin-right: 10px;">Delete</button>
                            <input type="hidden" name="reportId" value="<%= report._id %>">
                        </form>

                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
          <% } %>
          <% } else { %>
            <h1> No Reports.</h1>
            <%} %>



  </main>
</div>








    

  
  
  
      
</body>
</html>
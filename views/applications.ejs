<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/therapist-List.css">
    </head>


    <body style="background-color: #FEFBF3;">

        <%- include('./includes/navbar.ejs') %>

            <div class="container">
                <main style="margin-top: 100px;">
                    <% if (usersAll.length> 0) { %>
                        <div style="display: flex; justify-content: flex-start; align-items: stretch; flex-wrap: wrap;">
                            <% for (let singleUser of usersAll) { %>
                                <% if (singleUser.role==='therapist' ) { %>
                                    <div class="profile-card"
                                        style="margin-left: 30px; margin-right: 30px; margin-bottom: 60px;">

                                        <div class="name">
                                            <%= singleUser.name %>
                                        </div>
                                        <div class="about">
                                            <%= singleUser.email %>
                                        </div>
                                        <p style="margin: 15px;"></p>
                                        <div class="buttons text-center" style="display: inline-block;">

                                            <form action="/application/<%=singleUser._id%>" method="GET"
                                                style="margin-bottom: 10px;">
                                                <button style="margin-bottom: 30px;">View CV</button>
                                                <input type="hidden" name="viewCV">
                                            </form>

                                            <form action="/accept-application" method="POST"
                                                style="margin-bottom: 10px;">
                                                <button type="submit" style="background-color: #C1E1C1;">Accept</button>
                                                <input type="hidden" name="userEmail" value="<%= singleUser.email %>">
                                            </form>

                                            <form action="/decline-application" method="POST">
                                                <button type="submit"
                                                    style="background-color: #FF8986;">Decline</button>
                                                <input type="hidden" name="userEmail" value="<%= singleUser.email %>">
                                            </form>

                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>
                                            <% } else { %>
                                                <h1> No Applications.</h1>
      <% } %>
                        </div>
                </main>
            </div>




    </body>

    </html>